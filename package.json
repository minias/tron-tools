{
  "name": "tron-tools",
  "private": true,
  "version": "0.0.8",
  "main": "dist/extension.js",
  "icon": "media/icon.png",
  "publisher": "miniaslee",
  "pricing": "Free",
  "engines": {
    "node": ">=16",
    "vscode": "^1.90.0"
  },
  "keywords": [
    "tron",
    "trc20",
    "abi",
    "crypto",
    "transferFrom",
    "hex",
    "blockchain",
    "minias"
  ],
  "categories": [
    "Other",
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onCommand:tron-tools.open"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tronToolsContainer",
          "title": "트론 툴즈",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "tronToolsContainer": [
        {
          "id": "tronToolsPanel",
          "name": "TRC20 도구들"
        }
      ]
    },
    "commands": [
      {
        "command": "tron-tools.open",
        "title": "Open TRON Tools Panel",
        "description": "Open TRON Tools Panel",
        "category": "TRON Tools"
      }
    ],
    "keybindings": [
      {
        "command": "tron-tools.open",
        "key": "ctrl+shift+z",
        "mac": "ctrl+shift+z",
        "when": "editorTextFocus"
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/minias/tron-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/minias/tron-tools.git"
  },
  "scripts": {
    "dev": "vite",
    "build:webview": "vite build",
    "build:extension": "tsc -p tsconfig.extension.json",
    "build": "npm run build:webview && npm run build:extension",
    "vscode:prepublish": "npm run compile",
    "test": "tsc --noEmit",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "preview": "vite preview",
    "package:dev": "vsce package --allow-missing-repository",
    "package": "vsce package",
    "publish": "vsce publish",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^24.0.14",
    "@types/vscode": "^1.88.0",
    "@vscode/vsce": "^3.6.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "svelte": "^5.36.6",
    "tslint": "^6.1.3",
    "typescript": "~5.8.3",
    "vite": "^7.0.5"
  },
  "dependencies": {
    "apexcharts": "^5.2.0",
    "bs58check": "^4.0.0",
    "chart.js": "^4.5.0",
    "dayjs": "^1.11.13",
    "ethers": "^6.15.0",
    "markdown-it": "^14.1.0",
    "svelte-apexcharts": "^1.0.2",
    "tronweb": "^6.0.3"
  }
}
